@model List<Api>
<head>
    <link rel="stylesheet" href="~/wwwroot/css/site.css">
</head>

<div class="container">
    <h1 class="mt-3">Movies</h1>
    <form method="post" asp-controller="Movie" asp-action="Details">
        <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 main">
                <div class="card mb-4">
                    <div class = "image">
                        <a href="@Url.Action("Details", "Movie", new{movieId = movie.imdbID})"> <img src="@movie.Poster" class="card-img-top poster" alt="Movie Poster">   </a>
                    </div>
                    
                    <div class="card-description">
                        <p><a>Click</a>to learn more</p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            <strong>Year:</strong> @movie.Year<br>
                            <strong>Director:</strong> @movie.Director
                            <br>
                            @movie.Plot
                            <br>
                            
                            <footer> <a>Reviews</a></footer>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    </form>
    
</div>



    





