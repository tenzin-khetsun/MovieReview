@model List<Api>
<head>
    <link rel="stylesheet" href="~/wwwroot/css/site.css">
</head>

<div class="container">
    <h1 class="mt-3">Movies</h1>
    <form method="post" asp-controller="Movie" asp-action="Details">
        <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 main">
                <div class="card mb-4">
                    <div class = "image">
                        <a href="@Url.Action("Details", "Movie", new{movieId = movie.imdbID})"> <img src="@movie.Poster" class="card-img-top poster" alt="Movie Poster">   </a>
                    </div>
                    
                    <div class="card-description">
                        <p><a>Click</a>to learn more</p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">
                            <strong>Year:</strong> @movie.Year<br>
                            <strong>Director:</strong> @movie.Director
                            <br>
                            @movie.Plot
                            <br>
                            
                            <footer> <a>Reviews</a></footer>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>

    </form>
    
</div>
<div class="pagination">
    @if (Model.Count > 0)
    {
        <ul class="pagination-list">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="pagination-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="/Movies?page=@i&pageSize=@ViewBag.PageSize">Page @i</a>
                </li>
            }
        </ul>
    }
</div>


    





